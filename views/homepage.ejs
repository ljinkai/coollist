<div class="ls_body" ng-controller="HomeController">
    <% results.forEach(function(item, index){ %>
    <% numb = next.skip - 30 + index + 1%>
    <div class="row">
        <div class="ls_num col-xs-1"><%= numb %>.</div>
        <div class="col-xs-10">
            <a href="<%=item.url%>" class="ls_a" target="_blank" alt="<%= item.title %>"><%= item.title %></a>
            <div style="width: 100%;clear:both;height: 12px;line-height: 12px;font-size: 12px;margin-bottom: 5px;">
                <% if (item.nick) {%>
                    <span>by <%=item.nick%> | </span>
                <%}%>
                <span><%=: item.time | timeago %></span>
            </div>
        </div>
    </div>
    <% }) %>
    <% if (results.length >= 30) { %>
        <div class="ls_more"><a href="/next/?skip=<%= next.skip %>" target="_self">更多</a></div>
    <%}%>
</div>

